{
	"compilerOptions": {
		"target": "esnext",
		"module": "Node16",
		"lib": ["esnext", "dom"],
		"moduleResolution": "node16", // Updated module resolution setting
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"sigmastate-js/main": ["node_modules/sigmastate-js/dist/main.js"],
			"sigmastate-js": ["node_modules/sigmastate-js/sigmastate-js.d.ts"]
		}
	},
	"include": ["src/**/*.ts", "*.test.ts"],
	"exclude": ["node_modules"]
}
